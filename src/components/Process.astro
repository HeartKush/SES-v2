---
const steps = [
  {
    number: "1",
    title: "Agenda",
    description: "Una llamada de 30 minutos para conocer tus necesidades"
  },
  {
    number: "2",
    title: "Configuramos en 24h",
    description: "Implementamos tu solución personalizada"
  },
  {
    number: "3",
    title: "Empieza a vender",
    description: "Comienza a ver resultados inmediatamente"
  }
];
---

<section id="process" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-white mb-12">
      Proceso simple
    </h2>
    <div class="flex flex-col md:flex-row justify-center items-start gap-8">
      {steps.map(({ number, title, description }, index) => (
        <div class="flex flex-col items-center text-center max-w-sm">
          <div class="w-12 h-12 rounded-full bg-blue-500 flex items-center justify-center text-white text-xl font-bold mb-4">
            {number}
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
          <p class="text-gray-300">{description}</p>
          {index < steps.length - 1 && (
            <div class="hidden md:block text-white text-2xl mx-8">→</div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
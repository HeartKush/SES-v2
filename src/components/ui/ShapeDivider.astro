---
export interface Props {
  position?: 'top' | 'bottom';
  color?: string;
  height?: string;
}

const { 
  position = 'bottom', 
  color = '#1e40af', 
  height = '100px' 
} = Astro.props;
---

<div 
  class={`shape-divider ${position === 'top' ? 'shape-divider-top' : 'shape-divider-bottom'}`}
  style={`height: ${height};`}
>
  <svg 
    data-name="Layer 1" 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 1200 120" 
    preserveAspectRatio="none"
    class="shape-svg"
  >
    <path 
      d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
      fill={color}
    ></path>
  </svg>
</div>

<style>
  .shape-divider {
    position: absolute;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    z-index: 1;
  }

  .shape-divider-top {
    top: 0;
  }

  .shape-divider-bottom {
    bottom: 0;
  }

  .shape-divider-top svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 100%;
    transform: rotateX(180deg);
  }

  .shape-divider-bottom svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 100%;
  }

  .shape-svg {
    fill: currentColor;
  }
</style>